<UserControl x:Class="UserControlLib.ButtonLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlLib"
             mc:Ignorable="d" Height="144.687" Width="257.221">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Name="lblVal" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="15" Background="LightGray" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="16"></Label>
        <Button Name="buttonDown" Grid.Column="0" Grid.Row="1" Margin="15" Click="buttonDown_Click"></Button>
        <Button Name="buttonUp" Grid.Column="1" Grid.Row="1" Margin="15" Click="buttonUp_Click"></Button>
    </Grid>
</UserControl>
